<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="TODO"
            android:src="@drawable/ic_logo"
            android:layout_marginBottom="24dp" />


        <TextView
            android:text="Enable Permission"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="8dp"
            android:textColor="#222"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Allow access to enhance functionality and improve experience."
            android:textSize="14sp"
            android:textColor="#666"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="🔔 Notification Access"
            android:textSize="16sp"
            android:textColor="#333"
            android:padding="8dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/bg_item_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="📅 Calendar Access"
            android:textSize="16sp"
            android:textColor="#333"
            android:padding="8dp"
            android:id="@+id/calendar_access"
            android:layout_marginBottom="4dp"
            android:background="@drawable/bg_item_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="📍 Location Access"
            android:textSize="16sp"
            android:textColor="#333"
            android:padding="8dp"
            android:id="@+id/location_access"
            android:layout_marginBottom="4dp"
            android:background="@drawable/bg_item_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="🖼 Gallery or File Access"
            android:textSize="16sp"
            android:textColor="#333"
            android:padding="8dp"
            android:id="@+id/gallery_access"
            android:layout_marginBottom="4dp"
            android:background="@drawable/bg_item_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/enable_permissions"
            android:text="Enable Permission"
            android:backgroundTint="#FF00A8"
            android:textColor="#FFF"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
